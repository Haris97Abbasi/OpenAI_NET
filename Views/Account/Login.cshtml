@model OpenAiProject.Models.ViewModels.LoginViewModel

<!-- Page title -->
<h2>Sign In</h2>
<div class="row">
    <div class="col-md-8">
        <section id="loginForm">
            <!-- Login form -->
            <form id="account" method="post" asp-action="Login" asp-controller="Account">
                <h4>Use your registered email id and password to login.</h4>
                <hr />
                <!-- Validation summary -->
                <div asp-validation-summary="All" class="text-danger"></div>
                <!-- Email input field -->
                <div class="form-group row">
                    <label class="col-md-2" asp-for="Email"></label>
                    <div class=" col-md-10">
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <!-- Password input field -->
                <div class="form-group row mt-3">
                    <label class="col-md-2" asp-for="Password"></label>
                    <div class=" col-md-10">
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <hr />
                <!-- Remember me checkbox -->
                <div class="form-group">
                    <div class=" col-md-10 offset-md-2 checkbox">
                        <label asp-for="RememberMe" class="pr-4 pl-0">
                            <input asp-for="RememberMe" />
                        </label>
                        Remember me?
                    </div>
                </div>
                <!-- Submit button -->
                <div class="form-group mt-3">
                    <div class="col-md-10 offset-md-2">
                        <input type="submit" value="Log in" class="btn btn-success" />
                    </div>
                </div>
                <!-- Sign up link -->
                <p class="col-md-10 offset-md-2">
                    <a asp-action="Register">Sign Up</a>
                </p>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <!-- Validation scripts partial -->
    <partial name="_ValidationScriptsPartial" />
}