@{
    ViewData["Title"] = "Chat with OpenAI";
}

<h2>Chat with OpenAI</h2>

<form asp-action="Index" method="post">
    <div class="form-group">
        <label for="query">Enter your query:</label>
        <input type="text" name="query" id="query" class="form-control" placeholder="Type your question here..." required />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@if (ViewBag.Output != null)
{
    <h3>Response:</h3>
    <p>@ViewBag.Output</p>
}
